<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>E-mail </label>
            <input type="email" name="email" placeholder="Tu correo">
        </div>
        <div class="campo">
            <label>Password </label>
            <input type="password" name="password" placeholder="Tu contraseña">
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crea cuenta</a>
            <a href="/reestablecer-password">Olvidaste tu contraseña?</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
        </div>
    </form>
</main>