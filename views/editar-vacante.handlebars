<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label> Titulo </label>
            <input type="text" name="titulo" placeholder="Ej: React developer" value="{{vacante.titulo}}" required>
        </div>

        <div class="campo">
            <label> Empresa </label>
            <input type="text" name="empresa" placeholder="Empresa" value="{{vacante.empresa}}" required>
        </div>

        <div class="campo">
            <label> Ubicacion </label>
            <input type="text" name="ubicacion" placeholder="Colombia" value="{{vacante.ubicacion}}" required>
        </div>

        <div class="campo">
            <label> Salario (COP) </label>
            <input type="text" name="salario" placeholder="580.000" value="{{vacante.salario}}" required>
        </div>

        <div class="campo">
            <label> Contrato </label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Seleccione --</option>
                    <option value="freelance">Freelance</option>
                    <option value="Tiempo completo">Tiempo completo</option>
                    <option value="Medio tiempo">Medio tiempo</option>
                    <option value="Por proyecto">Por proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripcion del puesto</h3>

        <div class="campo descripcion">
            <label> Descripcion de puesto</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>

    </form>
</main>